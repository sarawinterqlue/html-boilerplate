{
  "name": "project-name",
  "version": "0.0.1",
  "description": "Description of your project",
  "scripts": {
    "dev": "gulp",
    "build": "gulp clean && gulp build"
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  },
  "proxy": {
    "open": false,
    "path": "localhost/[your-project]/app"
  },
  "vars": {
    "bundleJS": "main.js",
    "bundleCSS": "style.css",
    "scss": "style.scss"
  },
  "paths": {
    "app": {
      "base": "app",
      "img": "app/images",
      "font": "app/fonts",
      "js": "app/script",
      "jsSrc": "app/script/src",
      "jsVendor": "app/script/vendors",
      "scss": "app/style/scss",
      "css": "app/style"
    },
    "output": {
      "base": "dist",
      "img": "dist/images",
      "font": "dist/fonts",
      "js": "dist/script",
      "css": "dist/style"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-copy": "^4.0.1",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-uglify": "^3.0.2",
    "gulp-watch": "^5.0.1",
    "sass": "^1.52.3"
  }
}
